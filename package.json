{
  "name": "weather-app-backend",
  "version": "1.0.0",
  "main": "app.js",
  "scripts": {
    "start": "node app.js",
    "dev": "nodemon app.js",
    "test": "echo \"Error: no test specified\" && exit 1",

    "docker:build": "docker build -t weather-app-backend .",
    "docker:run": "docker run -p ${PORT:-3000}:3000 --env-file .env weather-app-backend",
    "docker:dev": "docker-compose -f docker-compose.dev.yml up --build",
    "docker:prod": "docker-compose up --build",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:clean": "docker-compose down -v --remove-orphans"
  },
  "keywords": [
    "express",
    "nodejs",
    "weather",
    "api"
  ],
  "author": "",
  "license": "ISC",
  "description": "Weather App Backend API",
  "dependencies": {
    "axios": "^1.6.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "helmet": "^8.1.0",
    "morgan": "^1.10.1",
    "redis": "^5.8.2"
  },
  "devDependencies": {
    "nodemon": "^3.1.10"
  }
}
